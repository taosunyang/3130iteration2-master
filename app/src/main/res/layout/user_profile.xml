<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/enrolment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#A569BD"
        android:orientation="vertical"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/UserName"
        android:layout_width="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:text="UserName"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#A569BD"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/UserFaculty"
        android:layout_width="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:text="UserFaculty"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#A569BD"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:text="Grade:"
        android:textSize="13sp" />


    <Button
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="Grade Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:text="Password:"
        android:textSize="13sp" />

    <Button
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:text="Academic timetable:"
        android:textSize="13sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/timetable"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="Timetable details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:textSize="13sp"
        android:text="Registration:"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/Registration"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="registraction"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:textSize="13sp"
        android:text="Program course tree:"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/CourseTree"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="courseTree"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

</LinearLayout>